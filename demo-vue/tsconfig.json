{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": ["es6", "dom", "es2017"],
        "types": ["vue"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["app/*"]
        }
    },
    "include": ["app/**/*", "./references.d.ts"],
    "exclude": ["node_modules", "platforms"]
}
